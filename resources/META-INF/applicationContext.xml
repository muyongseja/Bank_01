<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="controller" class="com.netsong7.bank.controller.FixedDepositController">
		<property name="service" ref="service" />
	</bean>
	
	<bean id="service" class="com.netsong7.bank.service.FixedDepositService">
		<property name="dao" ref="mybatisDao" />
	</bean>
	
	<bean id="jdbcDao" class="com.netsong7.bank.repository.FixedDepositDaoJdbc" />
	<bean id="mybatisDao" class="com.netsong7.bank.repository.FixedDepositDaoMabatis" />
	<bean id="hibernateDao" class="com.netsong7.bank.repository.FixedDepositDaoHibernate" />
</beans>
